
<style>
    .multilinetextsize {
        width: 500px;
        height: 150px;
    }
</style>
<style>
    body {
        font-size: 10px;
    }

    label {
        color: lightslategray;
        font-size: 10px;
    }

    input {
        font-size: 10px;
        border-top-left-radius: 4px;
        border-bottom-left-radius: 4px;
        border-top-right-radius: 4px;
        border-bottom-right-radius: 4px;
    }

    .dropdown.dropdown-lg .dropdown-menu {
        margin-top: -1px;
        padding: 6px 20px;
        font-size: 10px;
    }

    .input-group-btn .btn-group {
        font-size: 10px;
        display: flex !important;
    }

    .btn-group .btn {
        font-size: 10px;
        border-radius: 0;
        margin-left: -1px;
    }

        .btn-group .btn:last-child {
            font-size: 10px;
            border-top-right-radius: 4px;
            border-bottom-right-radius: 4px;
        }

    .btn-group .form-horizontal .btn[type="submit"] {
        font-size: 10px;
        border-top-left-radius: 4px;
        border-bottom-left-radius: 4px;
    }

    .form-horizontal .form-group {
        font-size: 10px;
        margin-left: 0;
        margin-right: 0;
    }

    .form-group .form-control:last-child {
        font-size: 10px;
        border-top-left-radius: 4px;
        border-bottom-left-radius: 4px;
    }
</style>

<br />
<h4 class="page-line"></h4>
<div>
    <div class="row">

        <div id="menuSearch" role="menu">
            <form role="form" style="padding-right: 20px; padding-left: 20px;  border-top-left-radius: 7px;
 border-bottom-left-radius: 7px;border-top-right-radius: 7px; border-bottom-right-radius: 7px; width: 900px;">
                <div>
                    <div class="row show-grid-forms">
                        @Html.Label("From", new { @class = "col-sm-2", style = "color:lightslategray" })
                        <div class="col-sm-3" style="margin-left: -170px; margin-top: 20px">
                            @(Html.Kendo().DatePicker()
              .Name("SStartDate")
            
              .Value("")
              .Format("yyyy/MM/dd")
              .HtmlAttributes(new { @class = "form-control,k-textbox", style = "width:90%; font-size:10px;" })
                       
                            )
                        </div>

                        @Html.Label("To", new { @class = "col-sm-2", style = "margin-left:50px" })
                        <div class="col-sm-3" style="margin-left: -170px; margin-top: 20px">

                            @(Html.Kendo().DatePicker()
              .Name("SEndDate")
              .HtmlAttributes(new { style = "width:90%;" })
              
              .Value("")
              .Format("yyyy/MM/dd")
                           
                            )
                        </div>

                    </div>
                    <div class="row show-grid-forms" style="margin-top: -15px;">
                        @Html.Label("Comment code", new { @class = "col-sm-2" })

                        <div class="col-sm-3" style="margin-left: -170px; margin-top: 20px">
                            @Html.TextBox("SCode", null,
            new
            {
                @class = "form-control,k-textbox",
            })
                        </div>
                   
                        @Html.Label("Comment", new { @class = "col-sm-2", style = "margin-left:50px" })

                        <div class="col-sm-3" style="margin-left: -170px; margin-top: 20px">
                            @Html.Editor("SDescription", new { @class = "k-textbox,multilinetextsize" })

                        </div>
                    </div>
                   








                </div>



               

                <h4 class="page-line"></h4>
                <button type="submit" id="btnSearch" class="btn btn-primary" style="margin-right: 360px; width: 100px">
                    <span class="glyphicon glyphicon-search" aria-hidden="true">  Search   </span>
                </button>
            </form>
        </div>
    </div>
  
</div>

<script>
    $(function() {
        $("#SStartDate").removeClass("dropdown-menu");
    })
</script>


